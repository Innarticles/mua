<% provide(:title, "Listing entries") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Image</th>
      <th>Category</th>
      <th>Ig handle</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.content %></td>
        <td><%= image_tag(@snippet.image_url(:thumb).to_s) %></td>
        
        <td><%= entry.category %></td>
        <td><%= entry.ig_handle %></td>
        <td>
          <div class="btn-group">
            <%= link_to entry, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Show") %>
            <% end %>
            <%= link_to edit_entry_path(entry), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Edit") %>
            <% end %>
            <%= link_to entry, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this entry?" } do %>
              <%= fa_icon("trash-o", text: "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_entry_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "New Entry") %>
<% end %>
