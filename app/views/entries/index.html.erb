<% provide(:title, "Listing entries") %>

<!-- Portfolio Grid -->
<section class="bg-light" id="portfolio">
  <div class="container">
    <div class="row">
      
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Portfolio</h2>
        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
    </div>
    <div class="row">
        <% @entries.each do |entry| %>
      <div class="col-md-4 col-sm-6 portfolio-item" style="    background: white;
      text-align: center;">
        <a class="portfolio-link" data-toggle="modal" href="#portfolioModal<%= entry.id %>">
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fas fa-plus fa-3x"></i>
            </div>
          </div>
          <%= image_tag entry.main_image.attached? ? url_for(entry.main_image) : '', class: "img-fluid" %>
          <!-- <img class="img-fluid" src="/img/portfolio/01-thumbnail.jpg" alt=""> -->
        </a>
        <div class="portfolio-caption">
          <h4><%= entry.name %></h4>
          <p class="text-muted"><%= entry.category %></p>
        </div>
      </div>
      <% end %>
    
    </div>
    
 
</section>

<% if false %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Image</th>
      <th>Category</th>
      <th>Ig handle</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.content %></td>
        <td><%#= image_tag(entry.image_url(:thumb).to_s) %></td>
        
        <td><%= entry.category %></td>
        <td><%= entry.ig_handle %></td>
        <td>
          <div class="btn-group">
            <%= link_to entry, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Show") %>
            <% end %>
            <%= link_to edit_entry_path(entry), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Edit") %>
            <% end %>
            <%= link_to entry, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Are you sure you want to delete this entry?" } do %>
              <%= fa_icon("trash-o", text: "Destroy") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_entry_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "New Entry") %>
<% end %>


<% end  %>







<% @entries.each do |entry| %>
  <div class="portfolio-modal modal fade" id="portfolioModal<%= entry.id %>" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="close-modal" data-dismiss="modal">
            <div class="lr">
              <div class="rl"></div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-lg-8 mx-auto">
                <div class="modal-body">
                  <!-- Project Details Go Here -->
                  <h2 class="text-uppercase"><%= entry.name %></h2>
                  <p class="item-intro text-muted"> <%= entry.category %></p>
                  <%= image_tag entry.main_image.attached? ? url_for(entry.main_image) : '', class: "img-fluid d-block mx-auto" %>
                  <p><%= entry.ig_handle %></p>
                  <!-- <ul class="list-inline">
                    <li>Date: January 2017</li>
                    <li>Client: Threads</li>
                    <li>Category: Illustration</li>
                  </ul> -->
                  <button class="btn btn-primary" data-dismiss="modal" type="button">
                    <i class="fas fa-times"></i>
                    Close Project</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
     
</div>
<% end %>




